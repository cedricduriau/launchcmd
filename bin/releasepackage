#!/usr/bin/env python

# stdlib modules
import sys
import argparse

# tool modules
from launchcmd.ui.releasepackagedialog import ReleasePackageDialog

# third party modules
from PySide2 import QtWidgets


def _build_parser():
    """Builds the command line interface.

    :rtype: argparse.ArgumentParser
    """
    parser = argparse.ArgumentParser(prog="releasepackage")

    helper = "module file of the repository to release"
    parser.add_argument("modulefile", help=helper)

    return parser


if __name__ == "__main__":
    parser = _build_parser()
    namespace = parser.parse_args()
    module_file = namespace.modulefile

    # show dialog
    app = QtWidgets.QApplication.instance() or QtWidgets.QApplication(sys.argv)
    dialog = ReleasePackageDialog(module_file)
    sys.exit(dialog.exec_())
