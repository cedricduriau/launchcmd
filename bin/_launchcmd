#!/usr/bin/env python

# stdlib modules
import argparse

# tool modules
from launchcmd import pathutils
from launchcmd import cmdutils


def _build_parser():
    """Builds the command line interface.

    :rtype: argparse.ArgumentParser
    """
    parser = argparse.ArgumentParser(prog="launchcmd")

    # required arguments
    helper = "environment location to load"
    parser.add_argument("location", help=helper)

    return parser


if __name__ == "__main__":
    parser = _build_parser()
    namepsace = parser.parse_args()

    location = namepsace.location

    dir_level = pathutils.get_level_directory(location)
    cmd = cmdutils.build_launchcmd_command(dir_level)
    print(cmd)
